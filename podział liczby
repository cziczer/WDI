bool rpodzial(int t[N], int sum1, int sum2, int i){
  if(i == N) return (sum1 == sum2);
  return rpodzial(t, sum1+t[i], sum2, i+1) or rpodzial(t, sum1, sum2+t[i], i+1);
 }
